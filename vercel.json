{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/telegram/webhook",
      "dest": "/api/telegram.py"
    },
    {
      "src": "/webhook/oxapay",
      "dest": "/api/oxapay.py"
    },
    {
      "src": "/api/set-webhook",
      "dest": "/api/set_webhook.py"
    }
  ],
  "build": {
    "env": {
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
    }
  },
  "installCommand": "pip install -r requirements.txt && prisma generate"
}

{
  "version": 2,
  "functions": {
    "api/*.py": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/telegram/webhook",
      "destination": "/api/telegram"
    },
    {
      "source": "/webhook/oxapay",
      "destination": "/api/oxapay"
    },
    {
      "source": "/api/set-webhook",
      "destination": "/api/set_webhook"
    }
  ]
}

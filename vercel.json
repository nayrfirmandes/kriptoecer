{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/telegram/webhook",
      "dest": "/api/telegram.py"
    },
    {
      "src": "/webhook/oxapay",
      "dest": "/api/oxapay.py"
    },
    {
      "src": "/api/set-webhook",
      "dest": "/api/set_webhook.py"
    }
  ]
}
